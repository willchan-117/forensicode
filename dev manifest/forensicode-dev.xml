<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <Id>617dd45b-8656-4fe0-ab83-bed9db8c497a</Id>
  <Version>1.0.4.0</Version>
  <ProviderName>ForensiCode</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <DisplayName DefaultValue="ForensiCode"/>
  <Description DefaultValue="Human authorship verification."/>

  <IconUrl DefaultValue="https://forensicode.web.app/assets/favicon-32x32.png"/>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://forensicode.web.app/word-addin/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides
    xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>

          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="ForensiCode.Group">
                <Label resid="Group.Label"/>

                <Control xsi:type="Button" id="ForensiCode.Button">
                  <Label resid="Button.Label"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Tooltip"/>
                  </Supertip>

                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>

              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://forensicode.web.app/assets/favicon-32x32.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://forensicode.web.app/assets/favicon-32x32.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://forensicode.web.app/word-addin/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="ForensiCode"/>
        <bt:String id="Button.Label" DefaultValue="Open ForensiCode"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="Button.Tooltip" DefaultValue="Open the ForensiCode panel"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>

</OfficeApp>
